<p id="notice"><%= notice %></p>

<h1>Student Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student</th>
      <th>Dob</th>
      <th>Phone no</th>
      <th>Cgpa</th>
      <th>Father name</th>
      <th>Mother name</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.name %></td>
        <td><%= student_profile.student_id %></td>
        <td><%= student_profile.dob %></td>
        <td><%= student_profile.phone_no %></td>
        <td><%= student_profile.cgpa %></td>
        <td><%= student_profile.father_name %></td>
        <td><%= student_profile.mother_name %></td>
        <td><%= student_profile.image_url %></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student Profile', new_student_profile_path %>
